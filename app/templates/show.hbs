{{page-title-banner title=model.Name}}

<div class="container single-performer main-content">
  <div class="row">

    <div class="col-sm-4 text-center">
      <p><img class="img-responsive performer-headshot" {{bind-attr src="headshot300" }} /></p>
    </div>
    <div class="col-sm-8">
      <p>
        {{{ Copy }}}
      </p>
      <ul class="list-group">
        <li class="list-group-item active" style="background:#695b53;">
        <h4 class="list-group-item-heading" style="background:#695b53;color:white">Shows</h4>
        </li>
        {{#each event in sortedEvents}}
          {{#link-to 'event' event classNames="list-group-item"}}
          <strong>{{event.Name}}</strong> - {{event.venue.Name}}
            <br /> ({{niceDate event.start_time}} {{getTime event.start_time}} - {{getTime event.end_time}})

          {{/link-to}}
        {{else}}
          <li class="list-group-item">No shows scheduled yet...</li>
        {{/each}}

      </ul>
      <p>
        {{#link-to "shows"}}‚Üê All Shows{{/link-to}}
      </p>
    </div>
  </div>
</div>







